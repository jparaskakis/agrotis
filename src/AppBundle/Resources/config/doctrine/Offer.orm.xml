<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Offer" table="offer">
    <indexes>
      <index name="user_id_idx" columns="user_id"/>
      <index name="producer_product_id_idx" columns="producer_product_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="amount" type="float" column="amount" precision="10" scale="0" nullable="true"/>
    <field name="price" type="float" column="price" precision="10" scale="0" nullable="true"/>
    <field name="message" type="text" column="message" length="65535" nullable="true"/>
    <field name="cdate" type="datetime" column="cdate" nullable="true"/>
    <field name="rdate" type="datetime" column="rdate" nullable="true"/>
    <field name="isAccepted" type="integer" column="is_accepted" nullable="true"/>
    <many-to-one field="producerProduct" target-entity="AgProducerProduct">
      <join-columns>
        <join-column name="producer_product_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="user" target-entity="AgUser">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
